<div class="container">
<div class="row justify-content-center"><h1> Firm <h1>
</div><br>
<br>
<div class="row justify-content-center">
<p><h4> Choose your TechSkills</h4></p>
</div>
<br>
<br>
<div class="row justify-content-center">
<%= form_for @firm do|f|%>
<div class="form-group">
    <%= f.label :employee_id%><hr>&emsp;</hr>
    <%= f.collection_select :employee_id,Employee.all, :id, :name%>
</div>
<div class="form-group">
    <%= f.label :techskill_id%><hr>&emsp;</hr>
    <%= f.collection_select :techskill_id,Techskill.all, :id, :name%>
</div>
<div class="form-group">
    <%= f.label :name%><hr>&emsp;</hr>
    <%= f.text_field :name %>
</div>
<div class="form-group">
     <%= f.label :verified%><hr>&emsp;</hr>
    <%= f.text_field :verified %>
</div>
<br>
<br>
<div class="form-group">
    <%=f.submit 'Save Details',:class => 'btn btn-dark' %>
</div>
 <%end%>
</div>
</div>
