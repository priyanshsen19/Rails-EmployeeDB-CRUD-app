<div class="container">
<div class="row justify-content-center">
<h1 clas="mt-4 mb-4 display-4">Edit Employee details</h1>
</div>
<br>
<br>
<br>
<div class="row justify-content-center">
<%= form_with( model: @employee,local:true) do |f|%>
<div class="form-group">
    <%= f.label :emp_id%><hr>&emsp;</hr>
    <%= f.text_field :emp_id %>
</div>
<div class="form-group">
    <%= f.label :company_id%><hr>&nbsp;</hr>
    <%= f.text_field :company_id %>
 </div>   
<div class="form-group">
    <%= f.label :name%><hr>&ensp;</hr>
    <%= f.text_field :name %>
</div>
<div class="form-group">
    <%= f.label :status%><hr>&ensp;</hr>
    <%= f.text_field :status %>
 </div>
 <div class="form-group">   
    <%=f.submit%>
    <%= hidden_field_tag :prev_page, f.submit %>
 </div>
 <%end%>
 </div>
 </div>
